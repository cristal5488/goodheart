
<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form group">
    <%= form.label :event_name %>
    <%= form.text_field :event_name, id: :event_event_name %>
  </div>

  <div class="form group">
    <%= form.label :date %>
    <%= form.date_select :date, id: :event_date %>
  </div>

  <div class="form group">
    <%= form.label :start_time %>
    <%= form.time_select :start_time, id: :event_start_time %>
  </div>

  <div class="form group">
    <%= form.label :end_time %>
    <%= form.time_select :end_time, id: :event_end_time %>
  </div>

  <div class="form group">
    <%= form.label :description %>
    <%= form.text_field :description, id: :event_description %>
  </div>

  <div class="form group">
    <%= form.label :address %>
    <%= form.text_field :address, id: :event_address %>
  </div>

  <div class="form group">
    <%= form.label :zipcode %>
    <%= form.text_field :zipcode, id: :event_zipcode %>
  </div>

  <div class="form group">
    <%= form.label :bloodtype %>
    <%= form.select :bloodtype, options_for_select(['A+','O+','B+','AB+','A-','O-','B-','AB-', 'All blood types needed']), class: 'form-control' %>
  </div>

  <div class="form group">
    <%= form.label :phone %>
    <%= form.text_field :phone, id: :event_phone %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
