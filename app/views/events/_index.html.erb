
<!-- <div class="event-div">Events</div> -->
<div class="col-xs-12">
  <p id="notice"><%= notice %></p>
  <h4 class="card-text text-center" style="font-size: 45px;">Events</h4>

  <% @events.each do |event| %>
  <!-- Event cards -->
  <div class="col-sm-4">
    <div class="card event-card">

      <div class="card-block">
        <center><h4 class="card-title"><strong><%= event.event_name %></strong</h4></center>
        <p class="card-text"><span class="sub">Date:</span> <strong><%= event.date %></strong></p>
        <p class="card-text"><span class="sub">Start time:</span> <strong><%= event.start_time.getlocal.strftime("%I:%M:%S %p")%></strong></p>
        <p class="card-text"><span class="sub">End time:</span> <strong><%= event.end_time.getlocal.strftime("%I:%M:%S %p") %></strong></p>
        <p class="card-text"><span class="sub">Description:</span> <strong><%= event.description %></strong></p>
        <p class="card-text"><span class="sub">Address:</span> <strong><%= event.address %></strong></p>
        <p class="card-text"><span class="sub">Zipcode:</span> <strong><%= event.zipcode %></strong></p>
        <p class="card-text"><span class="sub">Bloodtype:</span> <strong><%= event.bloodtype %></strong></p>
        <% if current_provider and current_provider.has_event?(event) %>
          <center><%= link_to 'Show', event, class: 'btn btn-warning' %> </center>
          <div class="remove">
            <%= link_to 'Remove', event, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>

<div class="spacer clearifx col-xs-12"></div>

<% if current_provider %>
  <%= link_to 'New Event', new_event_path %>
<% end%>
