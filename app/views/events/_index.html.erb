<p id="notice"><%= notice %></p>




<table>
  <thead>
  
    <tr class="titles">

      <th class="event-titles">Event name</th>
      <th class="event-titles">Date</th>
      <th class="event-titles">Start time</th>
      <th class="event-titles">End time</th>
      <th class="event-titles">Description</th>
      <th class="event-titles">Address</th>
      <th class="event-titles">Zipcode</th>
      <th class="event-titles">Bloodtype</th>
      <th class="event-titles">Phone</th>


      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr class="info">

        <td class="event-titles" id ="name"><%= event.event_name %></td>
        <td class="event-titles"id ="date"><%= event.date %></td>
        <td class="event-titles"id ="start_time"><%= event.start_time %></td>
        <td class="event-titles"id ="end_time"><%= event.end_time %></td>
        <td class="event-titles"id ="description"><%= event.description %></td>
        <td class="event-titles"id ="addr"><%= event.address %></td>
        <td class="event-titles"id ="zip"><%= event.zipcode %></td>
        <td class="event-titles"id ="bloodt"><%= event.bloodtype %></td>
        <td class="event-titles"id ="phone"><%= event.phone %></td><br>


        <td><%= link_to 'Show', event %></td>


        <% if current_provider and current_provider.has_event?(event) %>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_provider %>
  <%= link_to 'New Event', new_event_path %>
<% end%>
