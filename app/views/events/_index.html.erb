<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>

    <tr>

      <th>Event name</th>
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Description</th>
      <th>Address</th>
      <th>Zipcode</th>
      <th>Bloodtype</th>
      <th>Phone</th>


    <tr class="titles">

      <th class="event-titles">Event name</th>
      <th class="event-titles">Date</th>
      <th class="event-titles">Start time</th>
      <th class="event-titles">End time</th>
      <th class="event-titles">Description</th>
      <th class="event-titles">Address</th>
      <th class="event-titles">Zipcode</th>
      <th class="event-titles">Bloodtype</th>
      <th class="event-titles">Phone</th>


      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>

      <tr>
        <td><%= event.health_provider.name %></td>
        <td><%= event.event_name %></td>
        <td><%= event.date %></td>
        <td><%= event.start_time.getlocal.strftime("%I:%M:%S %p")%></td>
        <td><%= event.end_time.getlocal.strftime("%I:%M:%S %p") %></td>
        <td><%= event.description %></td>
        <td><%= event.address %></td>
        <td><%= event.zipcode %></td>
        <td><%= event.bloodtype %></td>
        <td><%= event.phone %></td>




        <td><%= link_to 'Show', event %></td>
        <% if current_provider and current_provider.has_event?(event) %>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_provider %>
  <%= link_to 'New Event', new_event_path %>
<% end%>
